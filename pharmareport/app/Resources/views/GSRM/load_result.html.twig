            <a href="{{ path('gsrm_loaded') }}"><button type="button" class="btn btn-danger">Confirm changes</button></a>
        </center>
        {# {{ form_widget(importGeoSalesRepForm.cancel, {'attr': {'class': 'btn btn-danger'}}) }}  {{ form_widget(importGeoSalesRepForm.confirm, {'attr': {'class': 'btn btn-primary'}}) }} #}
    </div>


    <div class="table-responsive">
      <h3><strong>Preview import data :</strong></h3>
        <table class="table table-bordered">
          <tr>
            <th>ClientoutputId</th>
            <th>Version geo structure code</th>
            <th>MarketId</th>
            <th>Level</th>
            <th>NameLevel</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>E-mail</th>
          </tr>
          {% for element in importMapping %}
            <tr>
              <td>{{ element.clientOutputId }}</td>
              <td>{{ element.versionGeoStructureCode }}</td>
              <td>{{ element.geoTeam }}</td>
              <td>{{ element.geoLevelNumber }}</td>
              <td>{{ element.geoValue }}</td>
              <td>{{ element.srFirstName }}</td>
              <td>{{ element.srLastName }}</td>
              <td>{{ element.srEmail }}</td>
            </tr>
          {% endfor %}
        </table>
    </div>

{% endblock %}
